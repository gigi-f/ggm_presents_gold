{
  "$id": "maps.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "maps": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "type": { "type": "string", "enum": ["overworld", "shop", "dungeon"] },
          "tilemap": { "type": ["string", "null"] },
          "color": { "type": ["integer", "null"] },
          "exits": {
            "type": "object",
            "properties": {
              "left": { "type": "string" },
              "right": { "type": "string" },
              "up": { "type": "string" },
              "down": { "type": "string" }
            },
            "additionalProperties": false
          },
          "doors": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["id", "gridX", "gridY", "kind", "targetMap", "targetDoor"],
              "properties": {
                "id": { "type": "string" },
                "gridX": { "type": "integer", "minimum": 0 },
                "gridY": { "type": "integer", "minimum": 0 },
                "kind": { "type": "string", "enum": ["entrance", "exit", "portal"] },
                "targetMap": { "type": "string" },
                "targetDoor": { "type": "string" }
              }
            }
          },
          "spawns": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["id", "kind", "gridX", "gridY"],
              "properties": {
                "id": { "type": "string" },
                "kind": { "type": "string" },
                "gridX": { "type": "integer", "minimum": 0 },
                "gridY": { "type": "integer", "minimum": 0 }
              }
            }
          }
        },
        "required": ["type", "exits", "doors", "spawns"]
      }
    }
  },
  "required": ["maps"]
}
